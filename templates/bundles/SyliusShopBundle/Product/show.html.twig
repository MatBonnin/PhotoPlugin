        <img src="{{ asset('images/products/' ~ product.imageName) }}" alt="{{ product.name }}" class="photo-image">
        <h1>{{ product.name }}</h1>
        <p>{{ product.description }}</p>
        <ul>
            <li>RÃ©solution : {{ product.attributes.resolution }}</li>
