{% extends '@PhotoPlugin/base.html.twig' %}

{% block title %}Liste des événements{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Événements</h1>

        {% if events is not empty %}
            <div class="row">
                {% for event in events %}
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">{{ event.name }}</h5>
                                <p class="card-text">{{ event.description|slice(0, 100) }}{% if event.description|length > 100 %}...{% endif %}</p>
                                <a href="{{ path('event_photos', {'slug': event.slug}) }}" class="btn btn-primary">Voir les photos</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info">
                <p>Aucun événement disponible.</p>
            </div>
        {% endif %}
    </div>
{% endblock %}
